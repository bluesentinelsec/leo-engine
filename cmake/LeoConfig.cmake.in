@PACKAGE_INIT@
include(CMakeFindDependencyMacro)

# Resolve <prefix>/lib/cmake/leo -> <prefix>/lib/cmake
get_filename_component(_leo_pkgdir "${CMAKE_CURRENT_LIST_DIR}" ABSOLUTE)
get_filename_component(_leo_cmake_root "${_leo_pkgdir}/.." ABSOLUTE)

# 1) Prefer the SDL3 that was installed alongside Leo (vendored)
#    This works even if the whole prefix is relocated.
find_dependency(SDL3 3.2 CONFIG
  PATHS "${_leo_cmake_root}/SDL3"
  NO_DEFAULT_PATH)

# 2) Fallback to any SDL3 available on the system
if(NOT SDL3_FOUND)
  find_dependency(SDL3 3.2 CONFIG REQUIRED)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/LeoTargets.cmake")
